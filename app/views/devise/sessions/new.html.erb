<link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<div class="login-cover">
  <div class="login-cover-image"><img src="/assets/bg-6.jpg" data-id="login-cover-image" alt="" /></div>
  <div class="login-cover-bg"></div>
</div>
<!-- begin #page-container -->
<div id="page-container" >
  <!-- begin login -->
  <div class="login login-v2" data-pageload-addclass="animated ">
    <!-- begin brand -->
    <div class="login-header">
      <div class="brand">
        <span class="logo"></span> Sparks
        <small>Sistema gerencial para escolas</small>
      </div>
      <div class="icon">
        <i class="fa fa-sign-in"></i>
      </div>
    </div>
    <!-- end brand -->
    <div class="login-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group m-b-20">
          <%= f.email_field :email, autofocus: true, :class => 'form-control input-lg', :placeholder => 'E-mail' %>
        </div>
        <div class="form-group m-b-20">
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg', :placeholder => 'Senha' %>
        </div>
        <div class="checkbox m-b-20">
            <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                Lembrar?
            <% end %>
        </div>
        <div class="login-buttons">
          <%= f.submit "Entrar", :class=>"btn btn-success btn-block btn-lg" %>
        </div>

        <div class="m-t-20">
          <% flash.each do |name, msg| %>
              <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>