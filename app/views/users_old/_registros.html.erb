<h1>Tipos de Pagamento Cadastrados</h1>

<div class="row">
	<div class="table-responsive col-md-12">
		<%= grid(@users) do |g|
			
			g.blank_slate  do
		    	content_tag :div, "Nenhum registro encontrado", class: 'well'
		  	end
			
			g.column name: 'Ações', class: 'acoes' do |option|
				buffer =  link_to('', edit_user_path(option), :class => 'editar')
				buffer += link_to('', user_path(option),:class => 'excluir', method: :delete, data: {confirm: 'Você tem certeza?'})
				raw buffer
			end
			
			g.column name: 'Nome', attribute: 'nome', filter: false
			g.column name: 'Email', attribute: 'email', filter: false
			g.column name: 'Criado em', attribute: 'created_at' , filter: false do |user|
				user.created_at.strftime('%d/%m/%Y') if !user.created_at.nil?
			end
			g.column name: 'Ultima vez logado', attribute: 'last_sign_in_at' , filter: false do |user|
				user.last_sign_in_at.strftime('%d/%m/%Y') if !user.last_sign_in_at.nil?
			end			
	    end %>
	</div>

</div>
